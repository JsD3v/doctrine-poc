{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1>Home</h1>
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar">
                    <form method="get">
                        <fieldset>
                            <legend>Search</legend>
                            <div class="form-group">
                                <label for="inputNumber">Prix</label>
                                <input type="number" class="form-control" id="inputNumber" name="inputNumber">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
               <div class="col-md-9">
                   <div class="row py-5 my-3">
                       {% for product in products %}
                           <div class="col-md-3 mb-3">
                               <div class="card shadow-sm" style="width: 18rem;">
                                   <img src="{{ asset('images/product-img.png') }}" class="card-img-top" alt="{{ product.name }}">
                                   <div class="card-body">
                                       <h5 class="card-title">{{ product.name }}</h5>
                                       <p class="card-text">{{ product.description }}</p>
                                       <p class="card-text">{{ product.price }}â‚¬</p>
                                       <a href="{{ path('app_index_show', {'id': product.id}) }}" class="btn btn-primary">Voir le produit</a>
                                   </div>
                               </div>
                           </div>
                       {% endfor %}
                   </div>
               </div>
               </div>




{% endblock %}
